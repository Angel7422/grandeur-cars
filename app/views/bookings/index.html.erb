<h1 class="text-center text-light mb-5 mt-3">My Bookings</h1>

<div class="container d-flex table-responsive" style="min-width: 90vw;">

      <table class="table table-striped table-secondary table-hover align-middle mt-3">

        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Car</th>
            <th scope="col">Start Date</th>
            <th scope="col">End Date</th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <% @bookings.each do |booking| %>
            <tr scope="row">
              <td><%= booking.id %></td>
              <td><%= booking.car.name %></td>
              <td><%= booking.start_date %></td>
              <td><%= booking.end_date %></td>
              <td><%= booking.status %></td>
              <td>
                <%= link_to 'Show', booking_path(booking), class: 'btn btn-primary btn-sm' %>
                <%#= link_to 'Edit', edit_booking_path(booking), class: 'btn btn-secondary btn-sm' %>
                <%#= link_to 'Cancel', booking_path(booking), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%#= link_to 'New Booking', new_car_booking_path(@car), class: 'btn btn-success' %>

</div>

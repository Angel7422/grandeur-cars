<h1 class="mx-auto p-2" style="width: 200px;">New Car</h1>

<div class="container">
  <div class="row" justify-content-center>
    <%= simple_form_for @car, html: { multipart: true } do |f| %>

      <div class="form-group">
        <%= f.input :name, input_html: { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= f.input :address, input_html: { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= f.input :price, input_html: { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= f.input :picture, as: :file, input_html: { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= f.button :submit, class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= link_to 'Back', cars_path, class: 'btn btn-secondary mt-3' %>
  </div>
</div>

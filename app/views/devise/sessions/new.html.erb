<body class="background-page">
  <div class="banner common-bg" style="background-image: url('https://res.cloudinary.com/dfwstcrkv/image/upload/v1718711706/grandgarage_vid5mb.jpg')">
    <div class="mx-5">
      <h1> Gran Cars </h1>
      <p>The Luxury is here for you</p>
        <div class="container-login mt-5">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

            <div class="form-actions">
              <%= f.button :submit, "Log in" %>
            </div>
          <% end %>
        </div>
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>


  <div id="car-log" class="container px-4 py-5 text-center common-bg">
          <p class="border border-end-0 border-start-0 border-dark-subtle mt-1 border-3">Elevate your driving experience! Luxury on four wheels!</p>

  </div>
</body>
